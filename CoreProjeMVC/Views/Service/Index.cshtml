
@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header border-0">
                <h3 class="mb-0">Hizmet Listesi Tablosu</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Baslik</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Duzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.ServiceID
                                </th>

                                <th class="budget">
                                    @item.Title
                                </th>


                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Guncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>

                <a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>




@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">  Mesaj Detay Sayfası </p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.WriterMessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Gönderen İsim Soyisim</label>
                    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alıcı İsim Soyisim</label>
                    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Gönderen Mail</label>
                    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alici Mail</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Mesaj İçeriği</label>
                    @Html.TextAreaFor(x => x.MessageContent, 6, 3, new { @class = "form-control" })
                </div>
                <a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Sayfasına Geri Dön</a>
                <a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Sayfasına Geri Dön</a>
                

            </form>
        </div>
    </div>
</div>


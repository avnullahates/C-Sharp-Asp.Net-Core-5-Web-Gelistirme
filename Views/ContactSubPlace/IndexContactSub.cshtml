@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSubPlace", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ContactID)
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">


                <h4 class="card-title">Alt İletişim Bilgileri Duzenle Panaeli</h4>
                <form class="form-group" method="post">
                    <br />
                    <label>Baslık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

                    <br />
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    <br />

                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    <br />                  

                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Description,6,3, new { @class = "form-control" })
                    <br />
                 
                    <button class="btn btn-success">Kaydet</button>
                </form>

            </div>
        </div>
    </div>

}

